#:kivy 1.0.9

<LetterBox>:
    size: 100, 100
    rows: 5
    cols: 5

    canvas.before:
        Color:
            rgba: self.rgba
        Rectangle:
            pos: self.pos
            size: self.size
    Label:
        id: letter_label
        font_size:50
        font_name:"arial"
        center: self.parent.center
        text: self.parent.lastUserInput
        color:  0, 0, 0, 1



<RibuardleGame>:
    padding: 0, 200
    cols: 1
    rows: 2
    RibuardleBoardContainer:
        id: board_container
    Label:
        id: controls_label
        text: "Controls."
        font_name: "Arial"
        color: 0.75, 0, 0, 1

<RibuardleBoardContainer>:
    RibuardleBoard:
        center: self.parent.center
        id: ribuardle_board
    Label:
        color: 1, 1, 1, 1
        text: "default"